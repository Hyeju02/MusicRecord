<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/mainbackcolor"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="58dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">
            <ImageButton
                android:id = "@+id/Btn_BF_toHome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/Default_before"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <LinearLayout
            android:orientation = "horizontal"
            android:layout_width = "match_parent"
            android:layout_height = "42dp" >
            <EditText
                android:fontFamily="@font/suitregular"
                android:textColor="@color/graycolor"
                android:padding="10dp"
                android:textSize="12dp"
                android:id="@+id/Edit_adddate"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="YY:MM:DD"
                android:gravity="top"/>
        </LinearLayout>

        <LinearLayout
            android:orientation = "horizontal"
            android:layout_width = "match_parent"
            android:layout_height = "10dp" >
            <View
                android:layout_gravity="center"
                android:background="@color/graycolor"
                android:layout_width ="match_parent"
                android:layout_height="1dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation = "horizontal"
            android:layout_width = "match_parent"
            android:layout_height = "42dp" >
            <Spinner
                android:id="@+id/Spinner_SelectMood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:fontFamily="@font/suitregular"
                android:textColor="@color/graycolor"
                android:padding="10dp"
                android:textSize="12dp"
                android:id="@+id/Edit_Song"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Song"
                android:gravity="top"/>

            <EditText
                android:fontFamily="@font/suitregular"
                android:textColor="@color/graycolor"
                android:padding="10dp"
                android:textSize="12dp"
                android:id="@+id/Edit_Singer"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Singer"
                android:gravity="top"/>

            <EditText
                android:fontFamily="@font/suitregular"
                android:textColor="@color/graycolor"
                android:padding="10dp"
                android:textSize="12dp"
                android:id="@+id/Edit_Url"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Uri"
                android:gravity="top"
                />

            <LinearLayout
                android:orientation = "horizontal"
                android:layout_width = "match_parent"
                android:layout_height = "10dp" >
                <View
                    android:layout_gravity="center"
                    android:background="@color/graycolor"
                    android:layout_width ="match_parent"
                    android:layout_height="1dp" />
            </LinearLayout>

            <EditText
                android:fontFamily="@font/suitregular"
                android:textColor="@color/graycolor"
                android:padding="10dp"
                android:textSize="12dp"
                android:id="@+id/Edit_Diary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Record"
                android:gravity="top"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <ImageButton
                    android:id = "@+id/Btn_SelectCover"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/Default_selectcover"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginRight="10dp"/>
                <ImageButton
                    android:id = "@+id/Btn_SaveDiary"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/Default_savediary"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>