<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/mainbackcolor"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="58dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/suitbold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Diary Title"
                android:id="@+id/Text_DiaryTitle"
                android:textSize="16dp"
                android:textColor="@color/maincolor"
                android:gravity = "center_vertical"
                android:layout_gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <ImageButton
                android:layout_marginRight="10dp"
                android:id = "@+id/Btn_MovetoSearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/Default_search"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="center"/>
            <ImageButton
                android:id = "@+id/Btn_WriteDiary"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/Default_writediary"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation = "horizontal"
            android:gravity="right"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content" >
            <Spinner
                android:id="@+id/Spinner_MoodorMonth"
                android:layout_width="fill_parent"
                android:layout_height="42dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <TextView
                android:fontFamily="@font/suitsemibold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sad"
                android:textColor="@color/maincolor"
                android:id="@+id/Text_Option"
                android:textSize="12dp"
                android:gravity = "center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ListView
                android:id="@+id/List_Diary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>